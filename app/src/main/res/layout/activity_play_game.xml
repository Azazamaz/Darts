<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="home.lali.darts.PlayGameActivity"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/score_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <RelativeLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/number1_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/number2_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20sp"
                android:layout_toEndOf="@id/number1_btn"/>
            <Button
                android:id="@+id/number3_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="20sp"
                android:layout_toEndOf="@id/number2_btn"/>
            <Button
                android:id="@+id/number4_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="20sp"
                android:layout_below="@id/number1_btn"/>
            <Button
                android:id="@+id/number5_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="20sp"
                android:layout_toEndOf="@id/number4_btn"
                android:layout_below="@id/number2_btn"/>
            <Button
                android:id="@+id/number6_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="20sp"
                android:layout_toEndOf="@id/number5_btn"
                android:layout_below="@id/number3_btn"/>
            <Button
                android:id="@+id/number7_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="20sp"
                android:layout_below="@id/number4_btn"/>
            <Button
                android:id="@+id/number8_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="20sp"
                android:layout_below="@id/number5_btn"
                android:layout_toEndOf="@id/number7_btn"/>
            <Button
                android:id="@+id/number9_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="20sp"
                android:layout_below="@id/number6_btn"
                android:layout_toEndOf="@id/number8_btn"/>
            <Button
                android:id="@+id/remove_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textSize="20sp"
                android:layout_below="@id/number7_btn"
                android:backgroundTint="@color/removeRed"/>
            <Button
                android:id="@+id/number0_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:layout_below="@id/number8_btn"
                android:layout_toEndOf="@id/number7_btn"/>

            <ImageButton
                android:id="@+id/reset_btn"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/reset_icon"
                android:layout_below="@id/number9_btn"
                android:layout_toEndOf="@id/number0_btn"/>

            <Button
                android:id="@+id/ok_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ok"
                android:layout_toEndOf="@id/number3_btn"/>

        </RelativeLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>