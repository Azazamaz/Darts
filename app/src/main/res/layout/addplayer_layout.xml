<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <TextView
        android:id="@+id/addnewplayerLayout_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_player_name_str"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/newplayerName_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/guest_player_str"
        android:layout_below="@id/addnewplayerLayout_tv"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:maxLength="18"/>

    <Button
        android:id="@+id/cancelLayout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/newplayerName_et"
        android:layout_below="@+id/newplayerName_et"
        android:background="#FFF"
        android:text="@string/cancel_str"/>

    <Button
        android:id="@+id/addplayerLayout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/newplayerName_et"
        android:layout_below="@id/newplayerName_et"
        android:background="#FFF"
        android:text="@string/add_player_str"/>

</RelativeLayout>